<!-- These links are for inside the controller -->
<br>
<% if controller.action_name == "index" %>
  <% if controller.controller_name == nil or controller.controller_name == 'activity' or controller.controller_name == '' %>
    <!-- Leave links for the activity controller here -->
    <%= button_to "Log New Activity", {:action => 'new', :controller => 'activity'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <%end%>
    <br>
  <% end %>
  <% if controller.controller_name == 'activity_type' %>
    <!-- Leave links for the activity type controller -->
    <%= button_to "Register New Acitivty Type", {:action => 'new', :controller => 'activity_type'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <br>
  <% end %>
  <% if controller.controller_name == 'group' %>
    <!-- Leave links for the group controller here -->
    <%= button_to "Create New Group", {:action => 'new', :controller => 'group'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <br>
  <% end %>
  
  <!-- These links are to other controllers-->
  <% if controller.controller_name != nil and controller.controller_name != "activity" %>
    <%= button_to "View Activity Log", {:action => 'index', :controller => 'activity'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <br>
  <% end %>
  <% if controller.controller_name != "activity_type" %>
    <%= button_to "View Activity Types", {:action => 'index', :controller => 'activity_type'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <br>
  <% end %>
  <% if controller.controller_name != "group" %>
    <%= button_to "View Groups", {:action => 'index', :controller => 'group'}, :method => 'get', :type => 'button', :class => 'btn' %>
    <br>
  <% end %>
<% else %>
  <br>
  <%= button_to "Back", url_for(:back), :method => 'get', :type => 'button', :class => 'btn' %>
  <br>
<% end %>
<br>